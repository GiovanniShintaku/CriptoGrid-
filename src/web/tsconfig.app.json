{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@/*": [ "*" ],
      "@components/*": [ "components/*" ],
      "@pages/*": [ "pages/*" ],
      "@assets/*": [ "assets/*" ],
      "@types/*": [ "types/*" ]
    },
    "types": [ "vite/client" ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/vite-env.d.ts",
    "vite.config.ts"
  ],
  "exclude": [ "node_modules", "dist" ]
}